<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yp_background_secondary"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="14dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back_button_description"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                style="@style/SettingsScreenHeader"
                android:text="@string/settings_title" />

        </LinearLayout>

        <FrameLayout style="@style/SettingsScreenMenuItem">
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/dark_theme" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/share_btn"
            style="@style/SettingsScreenMenuItem">
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/share_app" />
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <ImageView
                style="@style/SettingsMenuItemIcon"
                android:contentDescription="@null"
                android:src="@drawable/ic_share" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/support_btn"
            style="@style/SettingsScreenMenuItem">
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/write_to_support" />
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <ImageView
                style="@style/SettingsMenuItemIcon"
                android:contentDescription="@null"
                android:src="@drawable/ic_support" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/agreement_btn"
            style="@style/SettingsScreenMenuItem">
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/user_agreement" />
            <!-- ИЗМЕНЕНО: Используется правильный стиль -->
            <ImageView
                style="@style/SettingsMenuItemIcon"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow_forward" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>