<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yp_background_main"
        android:orientation="vertical">

        <!-- Контейнер для заголовка с правильными отступами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <TextView
                style="@style/MainScreenHeader"
                android:layout_gravity="start"
                android:text="@string/main_title" />
        </LinearLayout>

        <!-- Контейнер для кнопок с правильными отступами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/search_btn"
                style="@style/MainScreenButton">

                <ImageView
                    style="@style/MainScreenButtonIcon"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/search"/>

                <TextView
                    style="@style/MainScreenButtonText"
                    android:text="@string/search" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/library_btn"
                style="@style/MainScreenButton"
                android:layout_marginTop="16dp">

                <ImageView
                    style="@style/MainScreenButtonIcon"
                    android:src="@drawable/ic_library"
                    android:contentDescription="@string/library"/>

                <TextView
                    style="@style/MainScreenButtonText"
                    android:text="@string/library" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_btn"
                style="@style/MainScreenButton"
                android:layout_marginTop="16dp">

                <ImageView
                    style="@style/MainScreenButtonIcon"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/main_settings"/>

                <TextView
                    style="@style/MainScreenButtonText"
                    android:text="@string/main_settings" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>