<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили для Главного Экрана -->

    <style name="MainScreenHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_text_on_dark_background</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/white_rounded_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ИЗМЕНЕНО: Имя стиля без точки -->
    <style name="MainScreenButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- ИЗМЕНЕНО: Имя стиля без точки -->
    <style name="MainScreenButtonIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- Стили для Экрана Настроек -->

    <style name="SettingsScreenHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:textColor">@color/yp_text_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsScreenMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <!-- ИЗМЕНЕНО: Имя стиля без точки -->
    <style name="SettingsMenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:textColor">@color/yp_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- ИЗМЕНЕНО: Имя стиля без точки -->
    <style name="SettingsMenuItemIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <!-- НОВЫЙ РАЗДЕЛ: Стили для Экрана Поиска -->
    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/search_edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchClearIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchHistoryHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textColor">@color/yp_text_primary</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchHistoryClearButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/yp_text_primary</item>
        <item name="android:text">Очистить историю</item>
        <item name="android:textColor">@color/yp_background_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- НОВЫЙ РАЗДЕЛ: Стили для плейсхолдеров на экране Поиска -->
    <style name="SearchPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchPlaceholder.Icon">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="SearchPlaceholder.Title" parent="SearchHistoryHeader">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SearchPlaceholder.Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="SearchProgressBar">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/yp_blue</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>